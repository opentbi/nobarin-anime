{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}